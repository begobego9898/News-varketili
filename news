<script>
// small enhancement: replace "გუშინ" with actual date (yesterday) in Georgian format
(function(){
try{
const pubEl = document.getElementById('pubdate');
const now = new Date();
const y = new Date(now.getFullYear(), now.getMonth(), now.getDate() - 1);
const months = ['იანვ', 'თებ', 'მარ', 'აპრ', 'მაი', 'ივნ', 'ივლ', 'აგვ', 'სექ', 'ოქტ', 'ნოე', 'დეკ'];
const formatted = y.getDate() + ' ' + months[y.getMonth()] + ' ' + y.getFullYear();
pubEl.textContent = formatted;
pubEl.setAttribute('datetime', y.toISOString().slice(0,10));
}catch(e){}
})();
</script>
